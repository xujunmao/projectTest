<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/listStyle.css">
</head>

<body>
    <ul class="user-list">
        <% allBooks.forEach(item=> { %>
            <li class="user-item">
                <div class="user-info">
                    <span class="name">
                        <%= item.name %>
                    </span>
                    <span class="password">
                        <%= item.author %>
                    </span>
                    <span class="email">
                        <%= item.price %>
                    </span>
                    <span class="country">
                        <% if(item.is_hot==="0" ){ %>
                            "不热卖"
                            <% }else{ %>
                                “热卖
                                <%}%>
                    </span>
                    <% if(item.image_url){ %>

                        <a href="/images/<%=item.image_url %>">查看头像</a>
                        <% }else{ %>
                            <span>暂无头像</span>
                            <% } %>
                                <a class="delete" href="/delete/<%=item.id %>">X</a>
                </div>
            </li>
            <% }); %>

    </ul>
</body>

</html>